{
  "manifest_version": 2,
  "name": "D2L+",
  "version": "1.0",
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*.d2l.msu.edu/*"
  ],
  "browser_action": {
    "default_title": "D2L+",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "preview.html",
    "src/lz-string-default.min.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://d2l.msu.edu/*"
      ],
      "js": [
        "src/lz-string-default.min.js",
        "dist/contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "d2lplus@local",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
